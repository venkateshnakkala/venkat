<apex:page StandardController="Contact" extensions="ScanQr" docType="html-5.0" > 
       <html>
        <head>
            <style>
                @media print {
                    body, page {
                        margin: 0;
                        box-shadow: 0;
                    }
                }
           
                .block {
                    font-family: "Times New Roman";
                    width:4in;
                    height:2.25in;
                    box-sizing: border-box;
                    padding: 0px;
                    margin:0px;
                    padding: 0px;
                    margin:0px;
                }
                .name{
                    font-size:45px;
                    font-weight: bold;
                    height:1.3in;
                    vertical-align: middle; 
                    display: table-cell;
                }
                .program {
                    font-size:40px;
                    max-height:1in;
                    margin:10px;
                }    
                .rep {
                    font-size:24px;
                    max-height:1in;
                }
                .name, .program, .rep {
                    white-space: nowrap; 
                    overflow: hidden;
                    text-overflow: hidden;
                    text-align: center;
                    width:4in;
                 }
            </style>
        </head>
        <body>
        <button onclick="myFunction()">Print</button>
                <div class="block">
                    <div class="name">{!ct.Name}</div>
                    <div class="program">{!ct.Program_code__c}</div>
                    <div class="rep">Rep: {!ct.Owner.Name}</div>
                </div>
        </body>
    </html>
      <Script>
    function myFunction() {
        var w = window.open();
        var student="{!ct.Name}";
        var rep="{!ct.Owner.Name}";
        w.document.write('<html><head><style> body{font-family:"Times New Roman";} .block {font-family:"Times New Roman"; width:4in; height:2.25in; box-sizing:border-box; padding:0px; margin:0px; padding:0px; margin:0px;} .name{ font-size:45px; font-weight: bold; height:1.3in; vertical-align: middle; display: table-cell;} .program { font-size:40px; margin:10px;} .rep { font-size:20px; } .name, .program, .rep {white-space: nowrap; overflow: hidden; text-overflow: hidden; text-align: center; width:4in; max-height:1in;} @page{size: landscape;}  @media print { body, @page { margin: 0px; box-shadow: 0; size: landscape; page-break-before: avoid; width:100%; height:100%; } }</style> </head> <body><div class="block"><div class="name">'+student+'</div><div class="program">{!ct.Program_code__c}</div><div class="rep">Rep: '+rep+'</div></div></body> </html>');
        w.print();
        w.close();
       }
        </script>
</apex:page>