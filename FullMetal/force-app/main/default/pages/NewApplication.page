.home_link-list ul li {
    position: relative;
    margin-bottom: 0.2rem;
    padding-left: 15px !important;
    border: none;
    color: #4b4b4b;
}
.home_link-list ul li::before {
    content: '';
    color: #4b4b4b;
    font-weight: 700 !important;
    border: solid;
    border-width: 0 2px 2px 0;
    display: block;
    left: 0;
    top: 9px;
    background-color: transparent;
    position: absolute;
    height: 2px;
    width: 2px;
    padding: 1px;
    transform: rotate(-45deg);
