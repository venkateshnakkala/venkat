<!-- apex:page docType="html-5.0" controller="ApplicationLoginController" showHeader="false" sidebar="false" standardStylesheets="false" action="{!forwardToAuthPage}"-->
<apex:page docType="html-5.0" Controller="ApplicationController" action="{!checkApplications}" showHeader="false" sidebar="false" standardStylesheets="false" >
<html>
  <head>
    <title>Applications To Date</title>
    <!-- Bootstrap -->
    <apex:stylesheet value="{!URLFOR($Resource.static, 'css/bootstrap.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.static, 'css/jquery-ui.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.static, 'css/scrolling-nav.css')}"/> 
    <apex:stylesheet value="{!URLFOR($Resource.static, 'css/laFilmStyle.css')}"/>
    
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/jquery-2.1.4.js')}" />                
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/jquery-ui.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/jquery.mask.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/bootstrap.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/jquery.easing.min.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/scrolling-nav.js')}" />            
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/knockout.js')}" /> 
                <!-- <apex:includeScript value="{!URLFOR($Resource.static, 'js/knockout.validation.js')}" />  -->
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/autoresize.jquery.min.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/bootstrap-filestyle.js')}"/>  
    
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>
    <style>
        #the_footer{
            position:fixed;
            background-color:#FFFFFF;
            bottom:0;
            min-height:30px;
            text-align:center;
            font-style:italic;
            padding:8px 1px;
            font-size:12px;
            width:100%;
            -webkit-box-shadow: 0px -4px 8px rgba(50, 50, 50, 0.75);
            -moz-box-shadow:    0px -4px 8px rgba(50, 50, 50, 0.75);
            box-shadow:         0px -4px 8px rgba(50, 50, 50, 0.75);
            line-height: 1.5;
        }
        #the_footer span{
            white-space: nowrap;
        }

        th{
            text-align:center !important;
        }
    </style>
  </head>
  <body  id="page-top" data-spy="scroll" data-target=".navbar-fixed-top" >

    <c:ApplicationHeaderComponent /> 
    <style>
        @media (max-width : 380px) {
            .vwspc-section-full-page-link{
                    padding-top:30px !important;
            }
        }
    
    </style> 
    <div class="vw-page-wrapper clearfix">
        <div class="vwspc-section vwspc-section-full-page-link"  style="position: relative; z-index: 0; background: none;" >        
        <div class="vw-full-page-link-header">
                <h3 class="vw-full-page-link-title">Applications To Date</h3>           
                <apex:image url="{!URLFOR($Resource.static, 'img/bg-welcome-1263x560.jpg')}"  styleClass="vw-full-page-link-background hidden"/>            
            </div>
            <div class="backstretch" style="left: 0px; top: 0px; overflow: hidden; margin: 0px; padding: 0px; height: 250px; width: 100%; z-index: -999998; position: absolute; background-image: url(/resource/1484566260000/static/img/bg-welcome-1263x560.jpg); background-size: cover;">    
            </div>  
            <div class="container" style="margin-top:60px;">
                <div class="row" >          
                        <div class="col-md-10 center col-md-offset-1">
                            <ul class="noStyle">
                                <li style="text-align:left;">
                                    <!-- input type="checkbox"  data-bind="checked: acceptedAgreement" /--> 
                                        <p ><h3 style="text-align: center;font-weight: 800">Welcome back,{!$User.FirstName} {!$User.LastName}!</h3></p>
                                    <p>Thank you for your continued interest in our programs ! Below is a list of admission applications you have submitted to us.If you want to apply for a new program, please click the "Apply for new program" button below.</p>                                        
                                </li>
                             </ul>
                        </div> 
                    </div>
                    <div class="row">
                        <a href="/apex/Application?newApplication=true"  class="vw-button docButton" >Apply For New Program</a>
                    </div>
                    <div class="row" >          
                        <div class=""> <!--col-sm-6 col-sm-offset-3-->
                             <table class="table table-hover table-responsive table-striped table-bordered">
                                <thead>
                                    <tr>                                        
                                        <th>
                                            Program 
                                        </th>
                                        <th>
                                            Application Created Date
                                        </th>
                                        <th>
                                            Expected Start Date
                                        </th>
                                        <th>
                                            Application Status
                                        </th>
                                        <th>
                                            Documents
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <apex:repeat value="{!applicationList}" var="app">
                                        <tr>                                            
                                            <td>
                                                {!app.Program__c}
                                            </td>
                                            <td>
                                               <apex:outputText value="{0, date, MMMM d','  yyyy}">
                                                    <apex:param value="{!app.CreatedDate}"/>
                                                </apex:outputText>
                                            </td>
                                            <td>
                                                <apex:outputText value="{0, date, MMMM d','  yyyy}">
                                                    <apex:param value="{!app.Expected_Start_Date__c}"/>
                                                </apex:outputText>
                                            </td>
                                            <td>
                                                <apex:outputLink value="/apex/Application?id={!app.Id}">{!app.Application_Status__c}</apex:outputLink>
                                            </td>
                                            <td>
                                                <apex:outputLink rendered="{!IF(OR(app.Application_Status__c == 'Approved',app.Application_Status__c == 'Submitted'),true,false)}" value="/apex/Application?id={!app.Id}&goToSection=uploadDetailsSection">Upload Here</apex:outputLink>
                                            </td>
                                        </tr>
                                    </apex:repeat>
                                </tbody>
                            </table>
                        </div>          
                    </div>
                    <!-- <div class="row">
                        <a href="/apex/Application"  class="vw-button docButton" >Apply For New Program</a>
                    </div> -->
    
                <!--  <c:ApplicationJSComponent />--> 
                <script>
                    j$ = jQuery.noConflict();       
                    j$(document).ready(function() {
                        //Application.pageName('login');//shows logout link
                       // console.log('Application page name====' + Application.pageName());
                   });
                </script>  
            </div><!--container end --> 
         </div>
    </div>
    <div id="the_footer">For the best experience, <span>please use Google Chrome or Mozilla Firefox browsers.</span></div>  
  </body>  
</html> 
</apex:page>