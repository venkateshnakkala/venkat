<!-- apex:page docType="html-5.0" controller="ApplicationLoginController" showHeader="false" sidebar="false" standardStylesheets="false" action="{!forwardToAuthPage}"-->
<apex:page docType="html-5.0" controller="ApplicationLoginController" showHeader="false" sidebar="false" standardStylesheets="false" >
<html>
  <head>
    <title>Application Login</title>
    <!-- Bootstrap -->
    <apex:stylesheet value="{!URLFOR($Resource.static, 'css/bootstrap.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.static, 'css/jquery-ui.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.static, 'css/scrolling-nav.css')}"/> 
    <apex:stylesheet value="{!URLFOR($Resource.static, 'css/laFilmStyle.css')}"/>
    
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/jquery-2.1.4.js')}" />                
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/jquery-ui.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/jquery.mask.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/bootstrap.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/jquery.easing.min.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/scrolling-nav.js')}" />            
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/knockout.js')}" /> 
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/knockout.validation.js')}" /> 
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/autoresize.jquery.min.js')}" />
                <apex:includeScript value="{!URLFOR($Resource.static, 'js/bootstrap-filestyle.js')}"/>  
    
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>
    <style>
        #the_footer{
            position:fixed;
            background-color:#FFFFFF;
            bottom:0;
            min-height:30px;
            text-align:center;
            font-style:italic;
            padding:8px 1px;
            font-size:12px;
            width:100%;
            -webkit-box-shadow: 0px -4px 8px rgba(50, 50, 50, 0.75);
            -moz-box-shadow:    0px -4px 8px rgba(50, 50, 50, 0.75);
            box-shadow:         0px -4px 8px rgba(50, 50, 50, 0.75);
            line-height: 1.5;
        }
        #the_footer span{
            white-space: nowrap;
        }
    </style>
  </head>
  <body  id="page-top" data-spy="scroll" data-target=".navbar-fixed-top" >

    <c:ApplicationHeaderComponent /> 
    <style>
        @media (max-width : 380px) {
            .vwspc-section-full-page-link{
                    padding-top:30px !important;
            }
        }
    
    </style> 
    <div class="vw-page-wrapper clearfix">
        <div class="vwspc-section vwspc-section-full-page-link"  style="position: relative; z-index: 0; background: none;" >        
        <div class="vw-full-page-link-header">
                <h3 class="vw-full-page-link-title">Login To Application</h3>           
                <apex:image url="{!URLFOR($Resource.static, 'img/bg-welcome-1263x560.jpg')}"  styleClass="vw-full-page-link-background hidden"/>            
            </div>
            <div class="backstretch" style="left: 0px; top: 0px; overflow: hidden; margin: 0px; padding: 0px; height: 250px; width: 100%; z-index: -999998; position: absolute; background-image: url(/resource/1484566260000/static/img/bg-welcome-1263x560.jpg); background-size: cover;">    
            </div>  
            <div class="container" style="margin-top:60px;">
                    <div class="row" >          
                        <div class="col-sm-4 col-sm-offset-4">
                            <apex:form >
                            <apex:pageMessages id="error"/>
                            <ul class="noStyle">
                                <!-- li style="margin-bottom:35px;">
                                    <h2>Login To Application</h2>
                                </li -->
                                <li>
                                    <h4 style="text-align: left; font-weight:bold;">Username(Email):</h4>
                                </li>                        
                                <li>
                                    <apex:inputText value="{! username }" styleClass="textAnswer"/>
                                </li>
                                <li>
                                    <h4 style="text-align: left; font-weight:bold;">Password:</h4>
                                </li>
                                <li>
                                    <apex:inputSecret value="{! password }" styleClass="textAnswer"/>
                                </li>                    
                                <li style="margin-top:25px;">
                                    <apex:commandLink action="{! login }" value="SIGN IN" styleClass="vw-button"/>
                                </li>
                                <li>
                                    <apex:commandLink action="{!forwardToForgotPassPage}" value="Forgot your password?"/>
                                     | &nbsp;
                                    <apex:commandLink action="{!forwardToCustomRegPage}" value="Register To Apply"/>
                                </li>                                     
                            </ul>
                            </apex:form>
                        </div>          
                    </div>
                    
    
                <c:ApplicationJSComponent /> 
                <script>
                    j$ = jQuery.noConflict();       
                    j$(document).ready(function() {
                        Application.pageName('login');//shows logout link
                        console.log('Application page name====' + Application.pageName());
                   });
                </script>  
            </div><!--container end --> 
         </div>
    </div>
    <div id="the_footer">For the best experience, <span>please use Google Chrome or Mozilla Firefox browsers.</span></div>  
  </body>  
</html> 
</apex:page>