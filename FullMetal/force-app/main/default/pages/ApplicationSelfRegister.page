                     </apex:form> 
                        <div class="col-sm-4 col-sm-offset-4">
                            <apex:form id="theForm" forceSSL="true"> 
                            <apex:pageMessages id="error"/>
                            <ul class="noStyle">                                    
                                <li>
                                    <h4 style="text-align: left; font-weight:bold;">First Name:</h4>
                                </li>                        
                                <li>
                                    <apex:inputText required="true" id="firstName" value="{!firstName}" styleClass="textAnswer "/>
                                </li>
                                <li>
                                    <h4 style="text-align: left; font-weight:bold;">Last Name:</h4>
                                </li>
                                <li>
                                    <apex:inputText required="true" id="lastName" value="{!lastName}" styleClass="textAnswer "/>
                                </li> 
                                <li style="display:{!if(codeSet==true,'none','')}">
                                    <h4 style="text-align: left; font-weight:bold;">Email:</h4>
                                </li>   
                                
                                <li style="display:{!if(codeSet==true,'none','')}">
                                    <apex:inputText required="true" id="email" value="{!email}" styleClass="textAnswer"/>
