                                -->
                                <li style="display:{!if(codeSet==true,'','none')}" class="v_code">
                                    <h4 style="text-align: left; font-weight:bold;">Validation Code:</h4>
                                </li>  
                                <li style="display:{!if(codeSet==true,'','none')}" class="v_code">
                                     <apex:inputText id="validationCode" value="{!ValidCode}" styleClass="textAnswer" required="{!codeSet}"/>
                                </li>                                
                                <li>
                                    <h4 style="text-align: left; font-weight:bold; float:left;">Create Password:<sup>*</sup></h4>
                                </li>   
                                <li>
                                    <apex:inputSecret id="password" value="{!password}" styleClass="textAnswer"/>
                                </li>
                                <li>
                                    <h4 style="text-align: left; font-weight:bold;">Confirm Password:</h4>
                                </li>   
                                <li>
                                    <apex:inputSecret id="confirmPassword" value="{!confirmPassword}" styleClass="textAnswer"/>
                                </li>
                                <li>
                                    <span style="font-size:12px;font-style:italic;">
                                        <sup>*</sup> Password must be 8 or more characters, 1 letter, 1 number
                                    </span>
                                </li>           
                                <li style="margin-top:25px;">
                                    <apex:commandLink action="{!registerUser}" value="{!$Label.site.submit}" id="submit" styleClass="vw-button"/>
                                </li> 
                                <li>
                                    <!-- <a href="https://sandbox-lafs.cs44.force.com/Application/ApplicationForgotPassword?sId={!schoolId}"  >Forgot your password?</a> -->
                                    <!-- <apex:commandLink action="{!forwardToForgotPassPage}" value="Forgot your password?"/> -->
                                    <!-- <a href="https://sandbox-lafs.cs44.force.com/Application/ApplicationLogin?sId={!schoolId}"  >Login to application</a> -->
                                    <!-- <apex:commandLink action="{!forwardToLoginPage}" value="Login to application"/> -->
                                    
